@page
@model WebApp.Pages_Question.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Question.QuestionId" />
            <div class="form-group">
                <label asp-for="Question.QuestionItself" class="control-label"></label>
                <input asp-for="Question.QuestionItself" class="form-control" />
                <span asp-validation-for="Question.QuestionItself" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
                <input class="invisible" name="QuizId" value=@Model.Question.QuizId>
            </div>
        </form>
    </div>
</div>

<div class="display-5">
    <a asp-page="/Choice/Index" asp-route-id="@Model.Question.QuestionId">To choices</a>
</div>
<br/>
<div>
    <a asp-page="./Index" asp-route-id="@Model.Question.QuizId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
